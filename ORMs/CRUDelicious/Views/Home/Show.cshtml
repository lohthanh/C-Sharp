@model Dish

<div class="text-center">
    <h1>@Model.Name</h1>
    <div class="h4 pb-2 mb-4 text-dark border-bottom border-dark">
        <h4>@Model.Name by @Model.Chef</h4>
    </div>
    <p>@Model.Description</p>
    <p>Calories: @Model.Calories</p>
    <p>Tastiness: @Model.Tastiness</p>
    <div>
        <form asp-action="Destroy" asp-controller="Home" asp-route-DishId="@Model.DishId" method="post">
            <input type="submit" value="Delete">
        </form>
        <a asp-action="Edit" asp-controller="Home" asp-route-DishId="@Model.DishId" class="btn">Edit</a>
    </div>
</div>

