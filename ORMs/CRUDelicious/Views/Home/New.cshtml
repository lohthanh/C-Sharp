@{
    ViewData["Title"] = "Home Page";
}

@model Dish

<h1 class="text-center mb-5">Add a new Dish!</h1>
<form asp-action="Create" method="post" asp-controller="Home">
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <div>
                    <label class="form-label" asp-for="Chef">Chef's Name</label> <br>
                    <span asp-validation-for="Chef" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Chef">
                </div>
                <div>
                    <label class="form-label" asp-for="Name">Name of Dish</label> <br>
                    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Name">
                </div>
                <div>
                    <label class="form-label" asp-for="Calories"># of Calories</label> <br>
                    <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Calories">
                </div>
            </div>
            <div class="col">
                <label class="form-label" asp-for="Tastiness">Tastiness</label>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="col">
                <label class="form-label" asp-for="Description">Description</label> <br>
                <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
                <textarea asp-for="Description" cols="40" rows="10"></textarea> <br>
                <input type="submit" value="Add Dish" />
            </div>
        </div>
    </div>
</form>